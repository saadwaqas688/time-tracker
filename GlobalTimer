package example;

import java.util.Timer;
import java.util.TimerTask;

public class GlobalTimer {
    private Timer timer;
    private long elapsedSeconds;

    public GlobalTimer() {
        timer = new Timer();
        elapsedSeconds = 0;
    }

    public void start() {
        timer.scheduleAtFixedRate(new TimerTask() {
            @Override
            public void run() {
                elapsedSeconds++;
                System.out.println("Global Timer: " + elapsedSeconds + " seconds");
            }
        }, 0, 1000); // 1000 ms = 1 second
    }

    public void stop() {
        timer.cancel();
        System.out.println("Global Timer stopped at: " + elapsedSeconds + " seconds");
    }
}
